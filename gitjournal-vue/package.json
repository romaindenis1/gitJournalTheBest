{
  "name": "gitjournal",
  "private": true,
  "version": "2.0.0",
  "main": "electron-main.js",
  "description": "GitJournal Desktop App",
  "author": "Votre Nom",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.gitjournal.app",
    "productName": "GitJournal",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "server/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png",
      "verifyUpdateCodeSignature": false,
      "sign": null
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^3.x",
    "express": "^4.x",
    "html2pdf.js": "^0.10.1",
    "vue": "^3.x"
  },
  "devDependencies": {
    "concurrently": "^8.x",
    "cross-env": "^7.x",
    "electron": "^28.x",
    "electron-builder": "^24.x",
    "wait-on": "^7.x",
    "vite": "^5.x",
    "@vitejs/plugin-vue": "^5.x"
  }
}
